---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title>crisscrossed.net</title>
    <link rel="alternate" type="application/rss+xml" title="RSS"
          href="http://www.crisscrossed.net/mailchimp.xml"/>
    <description>crisscrossed Blog</description>
    <language>en-uk</language>
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>

    {% for post in site.posts limit: 20 %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <media:content url="http://www.crisscrossed.net/images/photos/medium/{{ post.image }}" type="image/{% if post.image contains 'png' %}png{% else %}jpg {% endif%}" medium="image" height="280" width="670" />
      <link>http://www.crisscrossed.net{{ post.url }}</link>
      <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
      <author>Christian Kreutz</author>
      <guid>http://www.crisscrossed.net{{ post.id }}</guid>
      <enclosure url="http://www.crisscrossed.net/images/photos/medium/{{ post.image }}" type="image/{% if post.image contains 'png' %}png{% else %}jpg {% endif%}" />
      <description><img src="http://www.crisscrossed.net/images/photos/medium/{{ post.image }}"/>{{ post.content | xml_escape }}</description>
    </item>
    {% endfor %}
  </channel>
</rss>

